
<div class="container" id="loginContainer">
  <div class="row" id="loginBox">
    <div class="col col-lg-6 col-md-4" id="imageCol">
      <div class="image-container">
        <%= image_tag("nutritionist.png", alt: "Cutting food", class: "cover-image")%>
      </div>
    </div>
    <div class="col col-lg-6 col-xs-12 col-sm-12 col-md-8">
      <div class="loginForm">
        <%= image_tag("logo.png", alt: "logo", width: "150px")%>
          <h2 id="loginTitle">Inicio de sesión</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, label: "Correo:",
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" }, class: "text-input" %>
              <%= f.input :password, label: "Contraseña:",
                          required: false,
                          input_html: { autocomplete: "current-password" }, class: "text-input" %>
              <%= f.input :remember_me, label: "Recuerdame", as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="btn btn-flat">
              <%= f.button :submit, "Iniciar Sesión" %>
            </div>
          <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
